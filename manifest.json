{
  "name": "Destiny.gg Status",
  "version": "2022.12.1",
  "description": "Live status tracker for the livestreamer Destiny",
  "manifest_version": 3,
  "action": {
    "default_popup": "./html/popup.html"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "scripting",
    "notifications",
    "alarms",
    "storage",
    "management"
  ],
  "icons": {
    "128": "images/dgg_icon.png"
  },
  "options_ui": {
    "page": "html/options.html",
    "open_in_tab": false
  },
  "background": {
    "service_worker": "./js/background.js"
  }
}