{
  "name": "Destiny.gg Status",
  "action": {
    "default_popup": "popup.html"
  },
  "manifest_version": 3,
  "host_permissions": [
    "<all_urls>"
  ],
  "version": "0.1",
  "description": "Live status tracker for the livestreamer Destiny",
  "permissions": [
    "scripting",
    "notifications",
    "alarms",
    "storage"
  ],
  "icons": {
    "128": "images/dgg_icon.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "background": {
    "service_worker": "background.js"
  }
}